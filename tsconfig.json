{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ES2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "composite": true,
        // "declaration": true,
        // "declarationDir": "dist",
        // "declarationMap": true,
        "plugins": [
            {
                "name": "next",
                "presets": ["next/babel"],
                "styled-components": {
                    "ssr": true
                }
            }
        ],
        "paths": {
            "": ["./*"],
            "~/*": ["./*"]
        },
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src", "next-env.d.ts", ".next/types/**/*.ts", "*.ts", "*.tsx"],
    "exclude": ["node_modules", "**/.*/", "next.config.json", "tsup.config.json", "tsup.config.ts", "dist", "build"]
}
